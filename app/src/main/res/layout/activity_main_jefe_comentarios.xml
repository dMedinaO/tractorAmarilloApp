<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".MainActivity_jefeComentarios">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeProfileJefe"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textUsuarioJefe"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Bienvenido "
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textRUT"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/textUsuarioJefe"
                android:text="Rut: "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textRol"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/textRUT"
                android:text="Jefe de taller"
                android:textSize="15dp"/>

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="58dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/baseline_group_work" />

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <RelativeLayout
            android:id="@+id/relativeInfoMaquinaria"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Informaci贸n de la maquinaria: "
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/text1"
                android:text="Descripci贸n: "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/text2"
                android:text="Modelo: "
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/text3"
                android:text="Capacidad: "
                android:textSize="15dp"
                />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="58dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/baseline_local_shipping" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeImplemento"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textImplemento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:text="Informaci贸n del implemento:"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textImplementoDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:layout_below="@+id/textImplemento"
                android:text="Descripci贸n: "
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/textImplementoTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:layout_below="@+id/textImplementoDescripcion"
                android:text="Tipo: "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textImplementoCapacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:text="Capacidad: "
                android:layout_below="@id/textImplementoTipo"
                android:textSize="15dp"/>

            <ImageView
                android:id="@+id/imageImplemento"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/baseline_build" />

        </RelativeLayout>


        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:text="Ingresa un comentario"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextComentarios"
                android:layout_width="295dp"
                android:layout_height="110dp"
                android:layout_below="@+id/textView"
                android:padding="3dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_grey"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:maxLength="50"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/buttonAccept"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true"
                android:text="Ingresar"
                android:layout_below="@+id/editTextComentarios"
                android:background="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:text="Cancelar"
                android:layout_below="@+id/editTextComentarios"
                android:background="@color/colorPrimaryDark"/>


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>